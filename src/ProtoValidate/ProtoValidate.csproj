<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\msbuild\package.props" />

    <PropertyGroup>
        <TargetFrameworks>net8.0;netstandard2.0</TargetFrameworks>
        <RootNamespace>ProtoValidate</RootNamespace>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <PackageId>ProtoValidate</PackageId>
        <Authors>TELUS</Authors>
        <Copyright>Copyright 2024-2025 TELUS</Copyright>
        <Description>C# implementation of protovalidate.  Supports ProtoValidate v0.12.1.</Description>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <PackageTags>ProtoValidate</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/telus-oss/protovalidate-net</RepositoryUrl>
        <PackageProjectUrl>https://github.com/telus-oss/protovalidate-net</PackageProjectUrl>
        <IsPackable>true</IsPackable>
        <Version>0.12.0-alpha</Version>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <DebugType>portable</DebugType>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <IsPublishable>false</IsPublishable>
    </PropertyGroup>

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>ProtoValidate.Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Cel" Version="0.3.2" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.2" />
        <PackageReference Include="Google.Protobuf" Version="3.32.1" />
        <PackageReference Include="Grpc.Tools" Version="2.72.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Remove="proto\**\*.proto" />
        <Content Include="proto\**\*.proto" Pack="true" PackagePath="content/proto" />
        <Protobuf Include="proto\**\*.proto" ProtoRoot="proto" />
    </ItemGroup>
    <ItemGroup>
        <None Include="build\*.targets" Pack="true" PackagePath="build" />
    </ItemGroup>
</Project>